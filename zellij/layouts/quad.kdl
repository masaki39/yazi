// 4分割レイアウト（3 Claude + 1 Terminal）
// 使い方: cd ~/project/xxx && zellij --layout quad
layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    tab name="QUAD" {
        pane split_direction="horizontal" {
            // 上段: Claude 1 + Claude 2 (60%)
            pane size="60%" split_direction="vertical" {
                pane size="50%" {
                    command "claude"
                }
                pane size="50%" {
                    command "claude"
                }
            }
            // 下段: Claude 3 + Terminal (40%)
            pane size="40%" split_direction="vertical" {
                pane size="50%" {
                    command "claude"
                }
                pane size="50%" {
                    name "Terminal"
                }
            }
        }
    }
}
