// ambient レイアウト
// 使い方: zellij --layout ambient
layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    tab name="AMBIENT" {
        pane split_direction="vertical" {
            // 左: _typewriter_fortune (50%, focus)
            pane size="50%" focus=true {
                command "typewriter"
            }
            // 右: btop + tty-clock (50%)
            pane size="50%" split_direction="horizontal" {
                // 右上: btop (70%)
                pane size="70%" {
                    command "btop"
                }
                // 右下: tty-clock (30%)
                pane size="30%" {
                    name "tty-clock"
                    command "tty-clock"
                    args "-sc" "-C" "5"
                }
            }
        }
    }
}
